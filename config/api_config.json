{
  "default_headers": {
    "User-Agent": "StrikeSuite/1.0.0",
    "Accept": "application/json",
    "Content-Type": "application/json"
  },
  "rate_limiting": {
    "requests_per_second": 10,
    "burst_limit": 50,
    "cooldown_period": 60
  },
  "authentication": {
    "supported_types": ["none", "bearer", "api_key", "basic", "oauth2"],
    "token_refresh_interval": 3600
  },
  "testing": {
    "default_timeout": 10,
    "max_redirects": 5,
    "verify_ssl": true,
    "retry_attempts": 3
  },
  "owasp_tests": {
    "API1": {
      "name": "Broken Object Level Authorization",
      "enabled": true,
      "test_ids": ["1", "2", "3", "admin", "user", "test"]
    },
    "API2": {
      "name": "Broken User Authentication",
      "enabled": true,
      "bypass_payloads": [
        {"username": "admin", "password": ""},
        {"username": "admin", "password": "admin"},
        {"username": "", "password": ""}
      ]
    },
    "API3": {
      "name": "Excessive Data Exposure",
      "enabled": true,
      "sensitive_fields": ["password", "ssn", "credit_card", "token", "secret"]
    },
    "API4": {
      "name": "Lack of Resources & Rate Limiting",
      "enabled": true,
      "requests_per_test": 20
    },
    "API5": {
      "name": "Broken Function Level Authorization",
      "enabled": true
    },
    "API6": {
      "name": "Mass Assignment",
      "enabled": true,
      "payloads": [
        {"role": "admin", "is_admin": true},
        {"user_type": "admin", "permissions": ["read", "write", "delete"]}
      ]
    },
    "API7": {
      "name": "Security Misconfiguration",
      "enabled": true
    },
    "API8": {
      "name": "Injection",
      "enabled": true,
      "payloads": [
        "' OR '1'='1",
        "'; DROP TABLE users; --",
        "<script>alert('XSS')</script>"
      ]
    },
    "API9": {
      "name": "Improper Assets Management",
      "enabled": true
    },
    "API10": {
      "name": "Insufficient Logging & Monitoring",
      "enabled": true
    }
  }
}
